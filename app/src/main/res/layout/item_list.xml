<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_list"
    android:layout_marginBottom="10dp"
    >




        <androidx.cardview.widget.CardView
            android:id="@+id/image_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/data_gambar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pink_flower"/>

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/data_item"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/image_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/flower_name"
                android:fontFamily="@font/nunito"
                android:textColor="#000000"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallo World"/>

            <TextView
                android:id="@+id/flower_lokasi"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="@font/rosario"
                android:drawablePadding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nelakurinji, India"/>



    </LinearLayout>

    <Button
        android:id="@+id/btnDetail"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/data_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=">"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_detail"/>
</RelativeLayout>